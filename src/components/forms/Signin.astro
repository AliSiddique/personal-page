<section>
  <div class="mx-auto max-w-3xl px-8 py-24 sm:py-32">
    <div>
      <p
        class="text-2xl font-medium tracking-tight text-neutral-900 dark:text-white sm:text-4xl">
        Sign in to your dashboard
      </p>
    </div>
    <p class="mt-4 text-neutral-500 dark:text-neutral-400">
      Sign in and manage all your to-do lists and tasks in one place from our
      beautiful dashboard.
    </p>
    <form class="mt-12 lg:mt-24 border-y dark:border-neutral-700 py-12">
      <div class="grid grid-cols-1 gap-2">
        <!-- Email Field -->
        <div>
          <label
            for="email"
            class="sr-only"
            >Email</label
          >
          <div>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Enter your email"
              autocomplete="email"
              class="block w-full rounded-lg border-0 py-3 px-3.5 text-sm leading-6 text-neutral-900 bg-neutral-100 dark:bg-neutral-800 dark:placeholder-text-neutral-300 placeholder:text-neutral-400 focus:ring-2 focus:ring-inset focus:ring-blue-400 dark:focus:ring-blue-300"
            />
          </div>
        </div>
        <!-- Password Field -->
        <div>
          <label
            for="password"
            class="sr-only"
            >Password</label
          >
          <div>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Enter your password"
              autocomplete="current-password"
              class="block w-full rounded-lg border-0 py-3 px-3.5 text-sm leading-6 text-neutral-900 bg-neutral-100 dark:bg-neutral-800 dark:placeholder-text-neutral-300 placeholder:text-neutral-400 focus:ring-2 focus:ring-inset focus:ring-blue-400 dark:focus:ring-blue-300"
            />
          </div>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="mt-4 flex flex-wrap gap-4 justify-end items-center">
        <a
          href="/forms/reset"
          class="inline-flex items-center gap-2 justify-center rounded-lg py-3 px-6 text-sm outline-offset-2 transition bg-white text-black font-medium hover:bg-neutral-50 dark:text-white dark:bg-neutral-800/50 dark:hover:bg-neutral-800 dark:hover:text-neutral-50 group w-full lg:w-auto border dark:border-white/20 h-10">
          Forgot Password?
      </a>
        <button
          type="submit"
          class="inline-flex items-center gap-2 justify-center rounded-lg py-3 px-6 text-sm outline-offset-2 transition bg-black text-white font-medium hover:bg-neutral-800 dark:bg-white dark:text-black dark:hover:bg-neutral-800 dark:hover:text-neutral-50 group w-full lg:w-auto border border-white/20"
          >Sign In</button
        >
      </div>
    </form>
    <div class="flex flex-wrap gap-4 justify-between items-center">
      <!-- Reminind me checkbox -->
      <div class="mt-4 flex items-start">
        <input
          type="checkbox"
          name="terms"
          id="terms"
          class="rounded border-neutral-200 text-blue-400 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 dark:bg-neutral-900 dark:border-neutral-700"
        />
        <label
          for="terms"
          class="ml-2 block text-sm leading-5 text-neutral-500 dark:text-neutral-300">
          Remind me for the next 30 days
        </label>
      </div>
      <p class="text-sm mt-4 text-neutral-500 dark:text-neutral-400">
        Don't have an account?
        <a
          class="text-blue-400 hover:text-neutral-400"
          href="/forms/signup"
          >Sign up instead</a
        >
      </p>
    </div>
  </div>
</section>
