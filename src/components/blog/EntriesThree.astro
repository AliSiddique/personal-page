---
const { title, url, description, pubDate, author, image } = Astro.props;
---
<li>
  <a href={url} title={title} class="group">
    <article class="relative isolate flex flex-col gap-8 lg:flex-row py-12">
      <div
        class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
        <img
          src={image}
          alt={title}
          class="absolute aspect-[384/246] inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover"
        />
        <div
          class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10">
        </div>
      </div>
      <div>
        <div class="group relative max-w-xl">
          <p
            class="text-lg font-semibold leading-6 text-neutral-900 dark:text-white group-hover:text-blue-400">
            {title}
          </p>
          <p
            class="mt-2 text-sm leading-6 text-neutral-500 dark:text-neutral-400 line-clamp-3">
            {description}
          </p>
        </div>
        <footer>
          <div class="inline-flex space-x-1 items-center mt-6">
            <p class="text-xs font-medium text-neutral-900 dark:text-white">
              {author}
            </p>
            <span aria-hidden="true">&middot;</span>
            <div class="flex text-xs text-neutral-400">
              <time datetime="2020-03-16"> {pubDate}</time>
            </div>
          </div>
        </footer>
      </div>
    </article>
  </a>
</li>
