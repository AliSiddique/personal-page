---
const { title, url, description, image, price } = Astro.props;
---

<div class="group relative">
  <div class="aspect-[384/246] overflow-hidden rounded-lg">
    <img
      src={image}
      alt={title}
      class="object-cover object-center h-full w-full group-hover:scale-125 duration-500 ease-in-out"
    />
  </div>
  <div
    class="mt-4 flex items-center justify-between space-x-8 text-lg font-semibold leading-6 text-neutral-900 dark:text-white group-hover:text-blue-500">
    <h3>
      <a href={url}>
        <span
          aria-hidden="true"
          class="absolute inset-0"
        ></span>
        {title}
      </a>
    </h3>
    <p>${price}</p>
  </div>
  <p
    class="mt-4 text-neutral-500 dark:text-neutral-400 text-pretty line-clamp-2">
    {description}
  </p>
</div>
