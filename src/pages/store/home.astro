---
import { getCollection } from "astro:content";
const allProducts = await getCollection("store");
import BaseLayout from "@/layouts/BaseLayout.astro";
import StoreEntries from "@/components/store/StoreEntries.astro";
---

<BaseLayout>
  <section>
    <div class="mx-auto max-w-3xl px-8 py-16">
      <h1
        class="text-2xl font-medium tracking-tight text-neutral-900 dark:text-white sm:text-4xl">
        Digital products for your business
      </h1>
      <p class="mt-4 text-neutral-500 dark:text-neutral-400">
        Shop my selection of digital products to help you grow your business,
        and to make your life easier and more productive.
      </p>
      <div
        class="mt-24 grid sm:grid-cols-2 gap-x-6 gap-y-24 border-y dark:border-neutral-700 py-12 lg:grid-cols-2">
        {
          allProducts.slice().map((post) => (
            <StoreEntries
              url={"/store/" + post.slug}
              price={post.data.price}
              title={post.data.title}
              description={post.data.description}
              alt={post.data.title}
              image={post.data.image.url}
            />
          ))
        }
      </div>
    </div>
  </section>

</BaseLayout>
