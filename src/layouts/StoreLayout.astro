---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section>
    <div class="mx-auto max-w-3xl px-8 py-16">
      <p
        class="text-2xl font-medium tracking-tight text-neutral-900 dark:text-white sm:text-4xl">
        {frontmatter.title}
      </p>
      <p class="mt-4 text-neutral-500 dark:text-neutral-400">
        {frontmatter.description}
      </p>
      <div class="flex gap-6 mt-24 md:justify-end">
        <a
          class="inline-flex items-center gap-2 justify-center rounded-lg py-3 px-6 text-sm outline-offset-2 transition bg-black text-white font-medium hover:bg-neutral-800 dark:bg-white dark:text-black dark:hover:bg-neutral-800 dark:hover:text-neutral-50 group w-full md:w-auto border border-white/20"
          href="#_"
          title="your title"
          aria-label="your label">
          Buy {frontmatter.title} for ${frontmatter.price}
        </a>
        <a
          class="inline-flex items-center gap-2 justify-center rounded-lg py-3 px-6 text-sm outline-offset-2 transition bg-white text-black font-medium hover:bg-neutral-50 dark:text-white dark:bg-neutral-800/50 dark:hover:bg-neutral-800 dark:hover:text-neutral-50 group w-full md:w-auto border dark:border-white/20"
          href={frontmatter.preview}
          title={frontmatter.preview}
          aria-label={frontmatter.preview}>
          Preview demo
        </a>
      </div>
      <div class="space-y-12 mt-4">
        <div
          class="grid grid-cols-1 sm:grid-cols-2 gap-6 border-y dark:border-neutral-700 py-12 lg:grid-cols-2">
          {
            frontmatter.images.map((image) => (
              <img
                class="aspect-[384/246] rounded-lg object-cover object-top bg-center h-full bg-neutral-100 dark:bg-neutral-800"
                src={image.url}
                alt={image.alt}
              />
            ))
          }
        </div>

        <div>
          <div>
            <!-- Product details -->
            <div class="mt-10 prose-styles">
              <h3>Includes</h3>
              <ul>
                <!-- Dynamically render highlights -->
                {
                  frontmatter.highlights.map((highlight) => (
                    <li>{highlight}</li>
                  ))
                }
              </ul>
              <h3>License</h3>
              <p>
                {frontmatter.license}
              </p>
            </div>
            <dl class="grid gap-6 sm:grid-cols-2 xl:grid-cols- mt-10">
              {
                frontmatter.features.map((feature) => (
                  <div class="rounded-lg bg-neutral-100 p-6 text-center dark:bg-neutral-800">
                    <dt>
                      <span class="text-sm font-semibold text-neutral-900 dark:text-white">
                        {feature.title}
                      </span>
                    </dt>
                    <dd class="mt-1 text-sm text-neutral-500 dark:text-neutral-400 text-balance">
                      {feature.description}
                    </dd>
                  </div>
                ))
              }
            </dl>
            <div
              class="flex gap-6 mt-12 pt-12 border-t dark:border-neutral-700 md:justify-end">
              <a
                class="inline-flex items-center gap-2 justify-center rounded-lg py-3 px-6 text-sm outline-offset-2 transition bg-black text-white font-medium hover:bg-neutral-800 dark:bg-white dark:text-black dark:hover:bg-neutral-800 dark:hover:text-neutral-50 group w-full md:w-auto border border-white/20"
                href="#_"
                title="your title"
                aria-label="your label">
                Buy {frontmatter.title} for ${frontmatter.price}
              </a>
              <a
                class="inline-flex items-center gap-2 justify-center rounded-lg py-3 px-6 text-sm outline-offset-2 transition bg-white text-black font-medium hover:bg-neutral-50 dark:text-white dark:bg-neutral-800/50 dark:hover:bg-neutral-800 dark:hover:text-neutral-50 group w-full md:w-auto border dark:border-white/20"
                href={frontmatter.preview}
                title={frontmatter.preview}
                aria-label={frontmatter.preview}>
                Preview demo
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
